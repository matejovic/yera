generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      =  "file:./dev.db"
}

model User {
  id    Int   @id @default(autoincrement())
  email  String  @unique
  password  String 
  entry Entry[]
  bio String?
}

// Metadata maybe needed?

model Entry {
  id Int @id @default(autoincrement())
  url String
  title String 
  content String
  extra String
  published_at DateTime?
  created_at DateTime @default(now())
  user  User @relation(fields: [user_id], references: [id])
  user_id Int 
  parent_id Int? 
  parent Entry? @relation("Parents", fields: [parent_id], references: [id])
  children Entry[] @relation("Parents")
  tags Tags[]
  type String
}


// enum EntryType {
